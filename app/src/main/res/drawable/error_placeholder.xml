<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- TikTok Style Dark Gradient -->
    <gradient
        android:startColor="#2A2A2A"
        android:endColor="#1A1A1A"
        android:angle="90"/>

    <!-- Rounded Corners -->
    <corners android:radius="14dp" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#444" />

    <!-- Inner padding -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" />
</shape>
