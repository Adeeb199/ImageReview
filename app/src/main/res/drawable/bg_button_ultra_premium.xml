<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#66FFFFFF">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#6200EE"
                android:endColor="#3700B3"
                android:angle="270"/>
            <corners android:radius="12dp"/>
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>
        </shape>
    </item>
</ripple>
