<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7"
    android:padding="16dp">

    <!-- ================ IMAGE CARD ================ -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.55"
        android:backgroundTint="#FFFFFF">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgReview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#EAEAEA"
                android:contentDescription="Image to review"
                android:clipToOutline="true"
                android:outlineProvider="background"/>

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="visible"
                style="@style/Widget.AppCompat.ProgressBar"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- ================ RATING SECTION ================ -->
    <TextView
        android:id="@+id/tvRatingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate this image"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#222"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardImage"
        app:layout_constraintStart_toStartOf="parent"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:progressTint="#FFB800"
        android:secondaryProgressTint="#FFE082"
        app:layout_constraintTop_toBottomOf="@id/tvRatingTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- ================ REACTIONS ================ -->
    <LinearLayout
        android:id="@+id/llReactions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ratingBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="3">

        <ImageView
            android:id="@+id/btnHeart"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:src="@drawable/ic_heart_filled"
            android:contentDescription="Heart Reaction"
            android:padding="8dp"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/btnSmile"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:src="@drawable/ic_smile"
            android:contentDescription="Smile Reaction"
            android:padding="8dp"
            android:scaleType="centerInside"/>

        <ImageView
            android:id="@+id/btnLike"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="56dp"
            android:src="@drawable/ic_like"
            android:contentDescription="Like Reaction"
            android:padding="8dp"
            android:scaleType="centerInside"/>
    </LinearLayout>

    <!-- ================ REVIEW EDITTEXT ================ -->
    <EditText
        android:id="@+id/etReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Write a review (optional)"
        android:textColor="#333"
        android:textSize="14sp"
        android:padding="14dp"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/llReactions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ================ BUTTONS: SUBMIT & SKIP ================ -->
    <LinearLayout
        android:id="@+id/llButtons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:weightSum="2">

        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:backgroundTint="#6200EE"
            android:stateListAnimator="@null"
            android:padding="16dp"
            android:layout_marginEnd="8dp"
            />

        <Button
            android:id="@+id/btnSkip"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Skip"
            android:textColor="#6200EE"
            android:backgroundTint="#EEEEEE"
            android:stateListAnimator="@null"
            android:padding="16dp"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
